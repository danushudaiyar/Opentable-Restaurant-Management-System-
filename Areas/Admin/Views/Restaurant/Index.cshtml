@using OpenTable.Areas.Admin.ViewModels
@model OpenTable.Areas.Admin.ViewModels.AdminRestaurantViewModel
@{
    ViewData["Title"] = "Restaurants";
}

<div class="container mt-4">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <div class="d-flex justify-content-between mb-4">
        <h2>Restaurant Management</h2>
        <a asp-action="Add" class="btn btn-primary">Add New</a>
    </div>

    <!-- Filter Form -->
    <form asp-action="Filter" method="post" class="row g-3 mb-4">
        <div class="col-md-4">
            <select name="filter" class="form-select"
                    asp-items="@(new SelectList(Model.Metropolises, "Id", "Name", Model.SelectedMetropolis))">
                <option value="all">All Cities</option>
            </select>
        </div>
        <div class="col-md-4">
            <select name="filter" class="form-select"
                    asp-items="@(new SelectList(@AdminRestaurantViewModel.PriceRanges, "Key", "Value", Model.SelectedPriceRange))">
                <option value="all">All Price Ranges</option>
            </select>
        </div>
        <div class="col-md-4">
            <select name="filter" class="form-select"
                    asp-items="@(new SelectList(@AdminRestaurantViewModel.CuisineStyles, "Key", "Value", Model.SelectedCuisine))">
                <option value="all">All Cuisines</option>
            </select>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Filter</button>
            <a asp-action="Index" class="btn btn-secondary">Clear</a>
        </div>
    </form>

    <!-- Restaurant Table -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>City</th>
                <th>Price</th>
                <th>Cuisine</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Restaurants)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Metropolis?.Name</td>
                    <td>@item.PriceRange</td>
                    <td>@item.CuisineStyle</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>