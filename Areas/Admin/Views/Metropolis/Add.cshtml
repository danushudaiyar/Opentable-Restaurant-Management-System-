@model OpenTable.Areas.Admin.ViewModels.AdminMetropolisViewModel
@{
    ViewData["Title"] = "Add Metropolis";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h2><i class="bi bi-building-add"></i> Add New Metropolis</h2>
    <hr />

    <form asp-action="Add" method="post" class="col-md-6">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="CurrentMetropolis.Name" class="form-label"></label>
            <input asp-for="CurrentMetropolis.Name" class="form-control" />
            <span asp-validation-for="CurrentMetropolis.Name" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Save
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}